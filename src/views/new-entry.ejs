<%- include('partials/header') %>

<div class="col-md-4 offset-md-4">
  <h2 class="text-center">Write a new entry</h2>

  <form method="POST" role="form">

    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" class="form-control" placeholder="Entry a new title" required>
    </div>

    <div class="form-group">
      <label for="body">Entry text</label>
      <textarea name="body" id="body" class="form-control" cols="30" rows="3" required></textarea>
    </div>

    <div class="form-group">
      <input type="submit" value="Post Entry" class="btn btn-primary">
    </div>


  </form>

</div>




<%- include('partials/footer') %>
